<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://fonts.googleapis.com/css?family=Inter"
      rel="stylesheet"
    />  
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="/styles.css" />
    <title>New Blog</title>
</head>
<body class="createBlog_body" style="font-family: 'Inter';">
    <div class="createBlog_details">
        <h1>Personal Blog</h1>
        <div class="navbar_createBlog">
                <a href="/blog">Blog</a>
                <i class="fa fa-chevron-right fa-2xs" style='font-size:10px; margin-top: 10px;'></i>
                <a>New Blog</a>
        </div>
    </div>
    <div class="create_blog_layout">
        <form id="add_diary_details" method="post" action="/blog" enctype="multipart/form-data" class="create_blog_form">
            <label
            style="display: none;"
                for="diary_title"
                ></label
            >
            <input
                type="text"
                id="diary_title"
                name="title"
                placeholder="Add a blog title..."
            ></input>           
            <label
                style="
                display: none;
                "
                for="diary_content"
                ></label
            >
            <textarea type="text" id="diary_content" name="content" placeholder="Add a description..." rows="15"></textarea>
            <label
                for="diary_image"
                class="attach_img"
                id="attached_img"
                ><img style="height: 18px;" src="/images/attach_img.png">
                Add an image
                </label>
                
            <input name="image" id="diary_image" type="file" accept="image/jpeg, image/png, image/jpg" placeholder="Add an image"  onchange="updateImageField()"></input>
            <div class="submit_btn">
            <button type="submit" id="get_diary_info" class="create_btn">
                Create
            </button>
            </div>
        </form>
    </div>
</body>
<script type="text/javascript">
    //get attached image path
    getAttachedImage = document.getElementById('diary_image')
    //used to change the label to current updaed attached image
    updateAttachedImage = document.getElementById('attached_img')
    //empty string to contain current attached image path
    currentAttachedImage = ''

function updateImageField() {
    currentAttachedImage = getAttachedImage.value
    currentAttachedImage = currentAttachedImage.replace(/^.*\\/, "");
    updateAttachedImage.innerHTML = currentAttachedImage;
}
</script>
</html>